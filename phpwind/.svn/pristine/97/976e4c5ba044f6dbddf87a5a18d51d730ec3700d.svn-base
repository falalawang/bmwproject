	//显示品牌列表
	public function brandList(){
		$brands = M('brand');
		$brand = $brands -> select();
		$count = 1;
		foreach($brand as $key => $value){
			$brand[$key]['count'] = $count;
			$count++;
		}

		$this -> assign('brands',$brand);
		$this -> display();
	}
