<extend name="Layout:layout" />
<block name="main-content">
<script src="__PUBLIC__/admin/js/jquery.js"></script>
	<div class="wrapper">
		<div class="row">
        <div class="col-sm-12">
        <section class="panel">
        <header class="panel-heading">
            车型列表&nbsp;&nbsp;&nbsp;&nbsp;<a href="__CONTROLLER__/addTypes" title="添加车型" alt="添加车型"><i class="fa fa-plus" style="color:#000;"></i></a>
        </header>
        <div class="panel-body">
        <div class="adv-table">
        <table  class="display table table-bordered table-striped" id="dynamic-table">
        <thead>
        <tr>
            <th class="hidden-sm">ID</th>
            <th>品牌</th>
            <th>车系</th>
            <th>车型</th>
            <if condition="$Think.session.auth neq '2'">
                <th class="hidden-sm">操作</th>
            </if>
        </tr>
        </thead>
        <tbody>
		<foreach name="models" item="model">
        <tr class="gradeX">
            <td class="hidden-sm">{$model['count']}</td>
            <td>{$model['brand']}</td>
            <td>{$model['series']}</td>
            <td>{$model['types']}</td>
            <if condition="$Think.session.auth neq '2'">
                <td class="center hidden-sm"><a href="__CONTROLLER__/modTypes/id/{$model['id']}">修改</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="__CONTROLLER__/delType/id/{$model['id']}" onclick="return confirm('你确定要删除该车型吗？')">删除</a></td>
            </if>
        </tr>
		</foreach>
        </tbody>
        </table>
        </div>
		
        </div>
        </section>
        </div>
        </div>
	</div>
    <script type="text/javascript">

    </script>
</block>