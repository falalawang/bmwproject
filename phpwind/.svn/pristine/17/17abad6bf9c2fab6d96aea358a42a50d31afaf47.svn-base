<extend name="Layout:layout" />
<block name="main-content">
<script src="__PUBLIC__/admin/js/jquery.js"></script>
<div class="wrapper">
    <div class="row">
        <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                添加后台人员
            </header>
            <div class="panel-body">
                <form action="__CONTROLLER__/insert" id="myform" class="form-horizontal adminex-form" method="post">
                    <div class="form-group">
                        <div class="col-sm-2"></div>
                        <label class="col-sm-2 col-sm-2 control-label">用户名</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" name="name" id="name" /><span id="nameMsg"></span>
                        </div>

                    </div>
					<div class="form-group">
                        <div class="col-sm-2"></div>
                        <label class="col-sm-2 col-sm-2 control-label">密码</label>
                        <div class="col-sm-4">
                            <input type="password" class="form-control" name="password" id="pwd1" /><span id="pwdMsg1"></span>
                        </div>
                        
                    </div>
					<div class="form-group">
                        <div class="col-sm-2"></div>
                        <label class="col-sm-2 col-sm-2 control-label">重复密码</label>
                        <div class="col-sm-4">
                            <input type="password" class="form-control" name="password2" id="pwd2"><span id="pwdMsg2"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2"></div>
                        <label class="col-sm-2 col-sm-2 control-label">手机号码</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" name="telephone" id="tel"><span id="telMsg"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2"></div>
                        <label class="col-sm-2 control-label col-lg-2">权限</label>
                        <div class="col-lg-4">
                            <select class="form-control m-bot15" name="auth" id="auth">
                                <option selected value="1"> &nbsp;&nbsp;管理员</option>
                                <option value="2"> &nbsp;&nbsp;客服工作者</option>
                                <option value="3"> &nbsp;&nbsp;维修人员</option>
                            </select>
                        </div>
                    </div>
					<div class="panel-body">
                        <div class="col-sm-5"></div>
						<button type="submit" class="btn btn-info">确认添加</button>
                    </div>
                </form>
            </div>
		</section>
		</div>
    </div>
</div>
        <script type="text/javascript">
            var isUserName = false;
            var isPwd = false;
            var isRePwd = false;
            var isTel = false;

            $('#name').blur(function(){
                checkUserName();
            });
            function checkUserName(){
                if($('#name').val() == ''){
                    $('#nameMsg').html('用户名不能为空').css({'color':'red'});
                }else if($('#name').val().length > 15){
                    $('#nameMsg').html('用户名位数不能大于15').css({'color':'red'});
                }else{
                    $.ajax({
                        type: "get",
                        url: "__URL__/checkName",
                        data: "name="+$('#name').val(),
                        success: function(d){
                            if(d == '1'){
                            $('#nameMsg').html('用户名已存在').css({'color':'red'});
                        }else{
                            isUserName = true;
                            $('#nameMsg').html('用户名可用').css({'color':'green'});
                        }
                        }
                    });
                }
            }

            $('#pwd1').blur(function(){
                checkPwd();
            });
            function checkPwd(){
                if($('#pwd1').val() == ''){
                    $('#pwdMsg1').html('密码不能为空').css({'color':'red'});
                }else if($('#pwd1').val().length < 5){
                    $('#pwdMsg1').html('密码位数不能小于5').css({'color':'red'});
                }else if($('#pwd1').val().length > 16){
                    $('#pwdMsg1').html('密码位数不能大于16').css({'color':'red'});
                }else{
                    isPwd = true;
                    $('#pwdMsg1').html('密码可用').css({'color':'green'});
                }
            }

            $('#pwd2').blur(function(){
                checkRePwd();
            });
            function checkRePwd(){
                 if($('#pwd2').val() == ''){
                    $('#pwdMsg2').html('确认密码不能为空').css({'color':'red'});
                }else if($('#pwd1').val() == $('#pwd2').val()){
                    isRePwd = true;
                    $('#pwdMsg2').html('密码可用').css({'color':'green'});
                }else{
                    $('#pwdMsg2').html('两次输入的密码不一致').css({'color':'red'});
                }
            }
            $('#tel').blur(function(){
                checkTel();
            });
            function checkTel(){
                var tel = $('#tel').val();
                var preg = /1[3-9]\d{9}$/;
                if(tel == ''){
                    $('#telMsg').html('手机号码不能为空').css({'color':'red'});
                }else if(!preg.test(tel)){
                    $('#telMsg').html('手机号码格式不正确').css({'color':'red'});
                }else{
                    isTel = true;
                    $('#telMsg').html('手机号码可用').css({'color':'green'});
                }
            }

            $('#myform').submit(function(){
                checkUserName();
                checkPwd();
                checkRePwd();
                checkTel();

                if(isUserName && isPwd && isRePwd && isTel){
                    return true;
                }else{
                    return false;
                }
            });

        </script>

</block>