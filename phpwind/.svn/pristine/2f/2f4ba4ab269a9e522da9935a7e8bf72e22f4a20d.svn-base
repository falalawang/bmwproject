<extend name="Layout:layout" />
<block name="main-content">
<div class="wrapper">
	<div class="row">
            <div class="col-sm-12">
                <section class="panel">
                    <header class="panel-heading">
                        4S店列表
                        <a href="__CONTROLLER__/addStore"><button class="btn btn-primary pull-right"><i class="fa fa-plus">&nbsp;添加</i></button></a>
                    </header>
                    <div class="panel-body">
                        <div class="adv-table">
                            <table  class="display table table-bordered table-striped" id="editable-sample">
                            <tr>
                                <th class="col-sm-1">ID</th>
                                <th class="col-sm-9">4S店名称</th>
                                <th class="col-sm-">操作</th>
                            </tr>
                    	        <tbody>
                    				<foreach name="store" item="store">
                    		        	<tr class="gradeX">
                                            <td>{$store['id']}</td>
                    			            <td>{$store['storeName']}</td>
                    			            <td><a href="__CONTROLLER__/modStore/id/{$store['id']}">修改</a>&nbsp;&nbsp;<a href="__CONTROLLER__/delStore/id/{$store['id']}" onclick="return confirm('你确定要删除吗？')">删除</a></td>
                    		      	  	</tr>
                    				</foreach>
                    	        </tbody>

                            </table>
                            
                        </div>
                    </div>
                </section>
            </div>
        </div>	
</div>
</block>