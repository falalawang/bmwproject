<extend name="Layout:layout" />
<block name="main-content">
<script src="__PUBLIC__/admin/js/jquery.js"></script>
<script type="text/javascript" language="javascript">
    $(document).ready(function () {

        $('.addressD').click(function(){
            $(this).next().css({'position':'absolute','z-index':10,'padding':'2px','margin-left':'20px'}).slideToggle("slow");
            myClose();
            return false;           
        });
    }); 
    function myClose(){
        $(".close").click(function(){ 
            $(this).parent().parent().parent().hide("slow"); 
        }); 
    }
</script> 
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    订单列表
                    <span class="tools pull-right">
                        <a href="javascript:;" class="fa fa-chevron-down"></a>
                    </span>
                </header>
                <div class="panel-body">
                    <div class="adv-table">
                        <table  class="display table table-bordered table-striped" id="dynamic-table">
                            <thead>
                                <tr>
                                    <th width='6%'>编号</th>
                                    <th width='5%'>地址</th>
                                    <th width="15%">车型</th>
                                    <th width="8%">服务</th>
                                    <th width="6%">价格</th>
                                    <th width="5%">预约时间</th>
                                    <th width="6%">vin码</th>
                                    <th width="6%">状态</th>
                                    <th width="6%">操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                <foreach name="orders" item="order">
                                    <tr class="gradeX">
                                        <td width="6%">{$order['count']}</td>
                                        <td width="5%">
                                            <a href="#" class="addressD">地址</a>
                                            <div class="panel panel-info" style="display:none;">
                                                <div class="panel-heading">
                                                    <h3 class="panel-title">联系地址<span class="close" style="float:right;cursor:pointer;">X</span></h3>
                                                </div>
                                                <div class="panel-body">
                                                    <table border='0'>
                                                        <tr>
                                                            <td>联系人：</td>
                                                            <td>{$order['name']}</td>
                                                        </tr>
                                                        <tr>
                                                            <td>电&nbsp;&nbsp;&nbsp;&nbsp;话：</td>
                                                            <td>{$order['telephone']}</td>
                                                        </tr>
                                                        <tr>
                                                            <td>地&nbsp;&nbsp;&nbsp;&nbsp;址：</td>
                                                            <td>{$order['province']} {$order['city']} {$order['county']}{$order['address']}</td>
                                                        </tr>
                                                    </table>
                                                </div>
                                            </div>
                                        </td>
                                        
                                        <td width="15%">
                                            ({$order['brand']}){$order['series']}{$order['types']}
                                        </td>
                                        <td width="15%">
                                            <foreach name="order" item="combo">
                                                <foreach name="combo" item="c">
                                                    {$c}元<br />
                                                </foreach>
                                            </foreach>
                                        </td>
                                        <td width="6%">{$order['lastPrice']}</td>
                                        <td width="5%">
                                            {$order['orderDate']|date="Y/m/d",###}&nbsp;{$order['orderTime']}
                                        </td>
                                        <td width="6%">{$order['vin']}</td>
                                        <td width="6%">
                                            <font color='red'>已取消</font>
                                        </td>
                                        <td width="6%">
                                                <a href="__CONTROLLER__/pass/id/{$order['id']}" title="审核" alt="审核"><i class="fa fa-smile-o"></i></a>
                                            <a href="__CONTROLLER__/del/id/{$order['id']}" title="删除" alt="删除"><i class="fa fa-trash-o"></i></a>
                                        </td>
                                    </tr>
                                </foreach>
                            </tbody>             
                        </table>
                    </div>
                </div>
            </section>
        </div>
    </div>
</block>