<?php
namespace Admin\Controller;
use Think\Controller;
class AutoReplyController extends Controller{
	
	//显示自动回复
	public function index(){
		$autoReply = M('autoreply');
		$autoReplys = $autoReply -> select();
		$this -> assign('list',$autoReplys);
		$this -> display();
	
	}

	//显示修改自动回复的页面
	public function mod(){
		$reply = M('autoreply');
		$id = $_GET['id'];
		$replys = $reply -> where("id={$id}") -> select();
		$this -> assign('reply',$replys);
		$this -> display();
	
	}

	//修改自动回复
	public function domod(){

		$reply = M('autoreply');
		$replys = $reply -> where("replyKey='{$_POST['replyKey']}'") -> select();
		if($replys){
			$this -> error('关键字已存在，请重新输入');
			exit();
		}
		$data = $_POST;
		if($reply -> save($data)){
			$this -> success('修改成功！','index');
		}else{
			$this -> error('修改失败！');
		}
		$this -> display();
	}

	//添加的页面
	public function add(){

		$this -> display();
	}

	//添加自动回复的功能
	public function insert(){

		$reply = M('autoreply');
		//判断输入的关键字是否存在，如果存在就直接返回
		$replys = $reply -> where("replyKey='{$_POST['replyKey']}'") -> select();
		if($replys){
			$this -> error('关键字已存在，请重新输入');
			exit();
		}
		//把数据插入数据库
		$data = $_POST;
		if($reply -> create($data)){
			if($reply -> add()){
				$this -> success('添加成功！');
			}else{
				$this -> error('添加失败！');
			}
		}else{
			$this -> error('失败！');
		}
	}

}
?>