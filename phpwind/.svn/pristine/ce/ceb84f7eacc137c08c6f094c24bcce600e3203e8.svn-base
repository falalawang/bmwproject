<extend name="Layout:layout" />
<block name="main-content">
<script type="text/javascript" src="__PUBLIC__/admin/js/jquery.js"></script>
<div class="wrapper">
    <div class="row">
        <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
            <a href="__CONTROLLER__/carList">服务车列表</a>>>
                选择技师
            </header>
            <div class="panel-body">
                <form action="__CONTROLLER__/selectServiceman" class="form-horizontal adminex-form" method="post" id="myform">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label"> 服务车编号</label>
                        <div class="col-sm-6">
                            <select name="mark" id="mark" class="form-control col-sm-6">
                            <foreach name="serverCar" item="mark">
                                <option value="{$mark['id']}">{$mark['mark']}</option>
                            </foreach>
                            </select>
                        </div>
                        
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">技师姓名</label>
                        <div class="col-sm-4">    
                        <foreach name="serverman" item="manager">
                            <div class="col-sm-6">      
                            <input id="techId[]" type="checkbox" name="techId[]" value="{$manager['id']}" />{$manager['name']}
                            </div>                   
                        </foreach>
                        </div>
                        <span id="techMsg"></span>
                    </div>
                    <div class="col-sm-4"></div>
                    <div class="col-sm-4 panel-body">
                        <button type="submit" class="btn btn-primary">确认添加</button>
                    </div>
                </form>
            </div>
        </section>
        </div>
    </div>
</div>
<script type="text/javascript">
    isCar = false;
    isStore = false;

    $('#carNum').blur(function(){
        checkCar();
    });
    function checkCar(){
         if($('#carNum').val() == ''){
            $('#carMsg').html('车编号不能为空').css({'color':'red'});
        }else{
            var data = {carNum:$('#carNum').val()};
            $.get('__CONTROLLER__/check',data,function(d){
                if(d == 1){
                    $('#carMsg').html('车编号已存在').css({'color':'red'});
                }else if(d == 2){
                    isCar = true;
                    $('#carMsg').html('车编号可用').css({'color':'green'});
                }
            });          
        }
    }

    $('#store').blur(function(){
        checkStore();
    });
    function checkStore(){
        if($('#store').val() == ''){
            $('#storeMsg').html('4S店名不能为空').css({'color':'red'});
        }else{
            isStore = true;
            $('#storeMsg').html('4S店名可用').css({'color':'green'});
        }
    }

    $('#myform').submit(function(){
        checkCar();

        checkStore();
        if(isCar && isStore){
            return true;
        }else{
            return false;
        }
    });

   
</script>
</block>