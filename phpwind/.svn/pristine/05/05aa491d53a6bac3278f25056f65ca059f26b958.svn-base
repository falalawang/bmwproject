<extend name="Layout:layout" />
<block name="main-content">
<div class="wrapper">
    <div class="row">
        <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
            <a href="__CONTROLLER__/storeList">4S店列表</a>>>
                修改4S店名
            </header>
            <div class="panel-body">
                <form action="__CONTROLLER__/updateStore" class="form-horizontal adminex-form" method="post">
                    
                    <div class="form-group">
                        <label class="col-sm-2 control-label">4S店名称</label>
                        <div class="col-sm-4">
                            <input type="text" id="" class="form-control" name="storeName" value="{$store[0]['storeName']}" /><span id=""></span>
                        </div>
                    </div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-4 panel-body">
                        <input type="hidden" name="id" value="{$Think.get.id}">
                        <button type="submit" class="btn btn-primary">确认修改</button>
                    </div>
                </form>
            </div>
        </section>
        </div>
    </div>
</div>
</block>