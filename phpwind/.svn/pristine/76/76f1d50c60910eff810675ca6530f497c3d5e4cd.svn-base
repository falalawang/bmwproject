<extend name="Layout:layout" />
<block name="main-content">
	<div class="wrapper">
            <div class="row">
                <div class="col-md-6"><br /><br /><br />
                    <!--statistics start-->
                    <div class="row state-overview">
                        <div class="col-md-6 col-xs-12 col-sm-6">
                            <div class="panel purple">
                                <div class="symbol">
                                    <i class="fa fa-pencil"></i>
                                </div>
                                <div class="state-value"><a style="color:white" href="__APP__/Order/index">
                                    <div class="value">未审核订单</div>
                                    <div class="title">{$order['count()']}</a></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-xs-12 col-sm-6">
                            <div class="panel red">
                                <div class="symbol">
                                    <i class="fa fa-bars"></i>
                                </div>
                                <div class="state-value"><a style="color:white" href="__APP__/Order/index">
                                    <div class="value">总订单数</div>
                                    <div class="title">{$orders['count()']}</a></div>
                                </div>
                            </div>
                        </div>
                    </div><br /><br />
                    <div class="row state-overview">
                        <div class="col-md-6 col-xs-12 col-sm-6">
                            <div class="panel blue">
                                <div class="symbol">
                                    <i class="fa fa-eye"></i>
                                </div>
                                <div class="state-value"><a style="color:white" href="__APP__/User/wechat">
                                    <div class="value">微信关注数</div>
                                    <div class="title">{$users['count()']}</a></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-xs-12 col-sm-6">
                            <div class="panel green">
                                <div class="symbol">
                                    <i class="fa fa-comments-o"></i>
                                </div>
                                <div class="state-value"><a style="color:white" href="__APP__/Evaluate/evaluate">
                                    <div class="value"> 订单评价数</div>
                                    <div class="title">{$evas['count()']}</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--statistics end-->
                </div>
                <div class="col-md-4">
                    <div class="panel">
                        <div class="panel-body">
                            <div class="calendar-block ">
                                <div class="cal1">

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
	</div>
</block>