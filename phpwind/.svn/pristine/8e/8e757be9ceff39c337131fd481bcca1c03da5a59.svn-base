<extend name="Layout:layout"/>
<block name="layoutBack">
  <a class="navbar-brand visible-xs-block" style="padding-right:0;" href="__CONTROLLER__/address">< 添加地址</a>
</block>
<block name="layoutMain">
<div class="container">
<form action="__CONTROLLER__/insert" method="post">
  <br>
  <div class="form-group">
    <label for="addressPhone">手机号码</label>
    <input type="text" class="form-control" name="telephone" id="addressPhone" placeholder="联系人手机号码">
  </div>
  <div class="form-group">
    <label for="addressName">所在地区</label>
    <input type="text" class="form-control" name="city" id="addressCity" placeholder="所在地区"  data-toggle="modal" data-target="#myModal">
  </div>
  <div class="form-group">
    <label for="addressPhone">街道地址</label>
    <input type="text" class="form-control" name="street" id="addressStreet" placeholder="街道地址">
    <div id="l-map"class="hidden"></div>
    <div id="searchResultPanel" style="height:auto; display:none;"></div>
  </div>
  <button type="submit" class="btn btn-primary btn-block" id="addressBtn">确定完成</button>
</form>
</div>

<!-- 选择城市 -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">请选择城市</h4>
      </div>
      <div class="modal-body">
        <ul id="cityList">
            <foreach name="provinces" item="province">
              <li class="province">
                <button type="button" class="btn btn-link provinceBtn">{$province}</button>
                <ul>
                <foreach name="citys" item="city">
                  <if condition="$city[0] eq $province">
                    <li class="city">
                      <button type="button" class="btn btn-link cityBtn">{$city[1]}</button>
                      <ul class="list-unstyled">
                        <foreach name="countys" item="county">
                          <if condition="$county[0] eq $city[1]">
                            <li class="county">
                              <button type="button" class="btn btn-link countyBtn">{$county[1]}</button>
                            </li>
                          </if>
                        </foreach>
                      </ul>
                    </li>
                  </if>
                </foreach>
                </ul>
              </li>
            </foreach>
        </ul>
      </div>
    </div>
  </div>
</div>
</block>