<extend name="Layout:layout" />
<block name="main-content">
<script type="text/javascript" src="__PUBLIC__/admin/js/jquery.js"></script>
<div class="wrapper">
	<div class="row">
        <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
            <a href="__CONTROLLER__/carList">服务车列表</a>>>
                添加4S店
            </header>
            <div class="panel-body">
                <form action="__CONTROLLER__/insertStore" class="form-horizontal adminex-form" method="post" id="myform">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">4S店名</label>
                        <div class="col-sm-6">
                            <input type="text" id="store" class="form-control" name="storeName" /><span id="storeMsg"></span>
                        </div>
                    </div>                   
                    <div class="col-sm-4"></div>
                    <div class="col-sm-4 panel-body">
                        <button type="submit" class="btn btn-primary">确认添加</button>
                    </div>
                </form>
            </div>
        </section>
        </div>
    </div>
</div>
<script type="text/javascript">
    isStore = false;

    $('#store').blur(function(){
        checkStore();
    });
    function checkStore(){
        if($('#store').val() == ''){
            $('#storeMsg').html('4S店名不能为空').css({'color':'red'});
        }else{
            isStore = true;
            $('#storeMsg').html('4S店名可用').css({'color':'green'});
        }
    }

    $('#myform').submit(function(){
        checkStore();
        if(isStore){
            return true;
        }else{
            return false;
        }
    });
  
</script>
</block>