<extend name="Layout:layout" />
<block name="main-content">
<div class="wrapper">
    <div class="row">
        <div class="col-sm-12">
        <section class="panel">
        <header class="panel-heading">
            所有用户
        </header>
            <div class="panel-body">
                <div class="adv-table">
                    <table  class="display table table-bordered table-striped" id="dynamic-table">
                        <thead>
                        <tr>
                            <th class="col-sm-2">ID</th>
                            <th class="col-sm-4">姓名</th>
                            <th class="col-sm-4">手机号</th>

                        </tr>
                        </thead>
                        <tbody>
                            <foreach name="users" item="users">
                                <tr class="gradeX">
                                    <td>{$users['id']}</td>
                                    <td>{$users['name']}</td>
                                    <td>{$users['telephone']}</td>
                                </tr>
                            </foreach>
                		</tbody>
                    </table>
                </div>
            </div>
        </section>
        </div>
    </div>
</div>
</block>