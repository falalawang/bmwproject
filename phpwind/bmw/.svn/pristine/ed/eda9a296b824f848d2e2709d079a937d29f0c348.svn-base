<extend name="Layout:layout" />
<block name="main-content">
	
        
        	<!-- Inner Container Start -->
            <div class="container">
            
            	<!-- Statistics Button Container -->

                
                <!-- Panels Start -->
                
            	<div class="mws-panel grid_8">
                	<div class="mws-panel-header">
                    	<span><i class="icon-settings"></i> 编辑用户信息</span>
                    </div>
                    <div class="mws-panel-body no-padding">
                    	<form class="mws-form" action="__APP__/user/update" method="post">
                        	<div class="mws-form-inline">
                            	
                            	<div class="mws-form-row">
                                	<label class="mws-form-label">姓名:</label>
                                	<div class="mws-form-item">
                                    	<div class="mws-form-col-2-8">
   									 		<input type="text" name="username" value="{$admin.username}"/>
										</div>
                                    </div>
                                </div>
                                <div class="mws-form-row">
                                    <label class="mws-form-label">电话:</label>
                                    <div class="mws-form-item">
                                        <div class="mws-tooltip-slider">
	                                        <div class="mws-form-col-2-8">
	   									 		<input type="text" name="phone" value="{$admin.phone}" />
											</div>
										</div>
                                    </div>
                                </div>
                                <div class="mws-form-row">
                                    <label class="mws-form-label">新密码:</label>
                                    <div class="mws-form-item">
                                        <div class="mws-ticks-slider">
                                        	<div class="mws-form-col-2-8">
	   									 		<input type="password" name="password" />
	   									 		<input type="hidden" name="id" value="{$admin.id}" />
											</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="mws-form-row">
                                    <label class="mws-form-label">确认新密码:</label>
                                    <div class="mws-form-item">
                                        <div class="mws-ticks-slider">
                                            <div class="mws-form-col-2-8">
                                                <input type="password" name="repassword" />

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            	<div class="mws-form-row">
                                
                                	<div class="mws-form-item">
                                        <div id="eq" class="clearfix">
                                       		<button class="btn btn-inverse btn-large" type="submit">修改</button>
                                       		<button class="btn btn-inverse btn-large" type="reset">重置</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>    	
                </div>
                
            
                </div>

        

</block>