<extend name='Layout:layout' />
<block name='main-content'>
	<div class="mws-panel grid_8">
                	<div class="mws-panel-header">
                    	<span>Inline Form</span>
                    </div>
                    <div class="mws-panel-body no-padding">
                    	<form action="__CONTROLLER__/updata" method='post' class="mws-form">
                    		<div class="mws-form-inline">
                    			<div class="mws-form-row">
                    				<label class="mws-form-label">标题</label>
                    				<div class="mws-form-item">
                    					<input type="hidden" name='id' value="{$message['id']}">
                    					<input type="text" name='title' value="{$message['title']}" class="large">
                    				</div>
                    			</div>
                    			<div class="mws-form-row">
                    				<label class="mws-form-label">详细信息</label>
                    				<div class="mws-form-item">
                    					<textarea name='message' class="large" " cols="" rows="">{$message['message']}</textarea>
                    				</div>
                    			</div>
                    		</div>
                    		<div class="mws-button-row">
                    			<input type="submit" name='sub' class="btn btn-danger" value="修改">
                    			<input type="reset" class="btn " value="重置">
                    		</div>
                    	</form>
                    </div>    	
                </div>
</block>